<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundo"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_mapa"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:text="@string/mapa_btn"
        android:fontFamily="@string/fonte"
        android:textColor="@color/corTexto"
        android:background="@drawable/designbutton"
        app:layout_constraintEnd_toStartOf="@+id/btn_qrcode"
        app:layout_constraintStart_toEndOf="@+id/btn_opiniao"
        app:layout_constraintTop_toBottomOf="@+id/imgMain" />

    <Button
        android:id="@+id/btn_opiniao"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/opiniao_btn"
        android:fontFamily="@string/fonte"
        android:background="@drawable/designbutton"
        android:textColor="@color/corTexto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMain" />

    <Button
        android:id="@+id/btn_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="29dp"
        android:text="@string/qrcode_btn"
        android:background="@drawable/designbutton"
        android:textColor="@color/corTexto"
        android:fontFamily="@string/fonte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMain" />

    <ImageView
        android:id="@+id/imgMain"
        android:layout_width="419dp"
        android:layout_height="252dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/museu_traje" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_mapa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Titulo_Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@string/fonte"
                android:text="@string/titulo_Main"
                android:textColor="@color/corTexto"
                android:layout_gravity="center"
                android:textSize="@dimen/titulos" />

            <TextView
                android:id="@+id/descricaoMain3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@string/fonte"
                android:text="@string/exposi_o_temporaria_Main"
                android:textColor="@color/corTexto"
                android:textSize="@dimen/descricoes"
                android:layout_below="@id/Titulo_Main"/>

            <TextView
                android:id="@+id/tempMain3"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/fonte"
                android:text="@string/os_descobrimentos"
                android:textColor="@color/corTexto"
                android:textSize="@dimen/main"
                android:layout_below="@id/descricaoMain3"/>

            <TextView
                android:id="@+id/descricaoMain2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@string/fonte"
                android:text="@string/exposi_o_temporaria_Main"
                android:textColor="@color/corTexto"
                android:textSize="@dimen/descricoes"
                android:layout_below="@id/tempMain3"/>

            <TextView
                android:id="@+id/tempMain2"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/fonte"
                android:text="@string/quadros_de_edvard_munch"
                android:textColor="@color/corTexto"
                android:textSize="@dimen/main"
                android:layout_below="@id/descricaoMain2"/>

            <TextView
                android:id="@+id/descricaoMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@string/fonte"
                android:text="@string/exposi_o_temporaria_Main"
                android:textColor="@color/corTexto"
                android:textSize="@dimen/descricoes"
                android:layout_below="@id/tempMain2"/>

            <TextView
                android:id="@+id/tempMain"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/fonte"
                android:text="@string/main_2_guerra_mundial"
                android:textColor="@color/corTexto"
                android:textSize="@dimen/main"
                android:layout_below="@id/descricaoMain"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>